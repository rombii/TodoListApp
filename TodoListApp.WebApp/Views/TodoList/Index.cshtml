@model List<TodoListWebApiModel>
<h1>To-Do List</h1>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a asp-controller="TodoList" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="TodoList" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-controller="TodoList" asp-action="Create">Add New To-Do</a>